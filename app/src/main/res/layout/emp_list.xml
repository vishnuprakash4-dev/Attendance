<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiend"
    android:padding="5dp"
    android:id="@+id/emp_list"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/car_view"
        android:background="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/card_view"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/emp_img"
                android:src="@drawable/company_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Emp Name"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/purpl_blue"
                    android:id="@+id/name_emp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/emp_id"
                    android:textStyle="bold"
                    android:textColor="@color/purpl_blue"
                    android:id="@+id/id_emp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:hint="Emp Department"
                    android:textColor="@color/purpl_blue"
                    android:textStyle="bold"
                    android:id="@+id/position_empl"/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/hide_info"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_marginTop="95dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/view_image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:hint="Name:"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Employee Name"
                        android:gravity="end"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/name_employee"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:hint="Emp Id :"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emp Id"
                        android:gravity="end"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/id_employee"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Employee Position :"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Employee Position"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/emp_pos"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:hint="Phone No :"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone No"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/emp_c_num"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Email Id :"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Id"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/email_emp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Joining Date :"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/purpl_blue"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Joining Date"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/purpl_blue"
                        android:id="@+id/emp_doj"/>

                </LinearLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>